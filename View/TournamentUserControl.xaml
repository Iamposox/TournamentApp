<UserControl x:Class="Tournaments.WPF.View.TournamentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tournaments.WPF.View"
             xmlns:VM="clr-namespace:Tournaments.WPF.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <VM:TournamentViewModel/>
    </UserControl.DataContext>
    <Grid Background="AliceBlue">
        <DockPanel LastChildFill="False">
            <Button DockPanel.Dock="Bottom" Content="Load" Command="{Binding LoadFileCommand}"/>
            <Button DockPanel.Dock="Bottom" Content="Save" Command="{Binding SaveFileCommand}"/>
        </DockPanel>
    </Grid>
</UserControl>
